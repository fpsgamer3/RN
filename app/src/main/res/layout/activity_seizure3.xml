<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Seizure">

    <TextView
            android:text="Check if the person has any medication."
            android:textSize="7pt"
            android:layout_width="331dp"
            android:layout_height="42dp" android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.513" app:layout_constraintHorizontal_bias="0.462"/>
    <TextView
            android:text="-> Diazepam - given orally"
            android:textSize="7pt"
            android:layout_width="335dp"
            android:layout_height="36dp" android:id="@+id/textView1"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="244dp"/>
    <TextView
            android:text="-> Diastat - given rectally"
            android:textSize="7pt"
            android:layout_width="338dp"
            android:layout_height="30dp" android:id="@+id/textView2"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            android:layout_marginBottom="192dp"/>
    <TextView
            android:text="-> Midazolam - can be given nasally"
            android:textSize="7pt"
            android:layout_width="336dp"
            android:layout_height="41dp" android:id="@+id/textView3"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            android:layout_marginBottom="208dp"/>
    <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button7"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.655" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"/>
    <ImageView
            android:layout_width="409dp"
            android:layout_height="471dp"
            app:srcCompat="@drawable/aid9420704_v4_728px_avoid_injury_during_an_epileptic_seizure_step_10"
            android:id="@+id/imageView5"
            app:layout_constraintBottom_toTopOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="288dp"
            android:layout_height="291dp" app:srcCompat="@drawable/_12" android:id="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="236dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="584dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>