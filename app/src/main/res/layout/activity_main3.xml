<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Seizure">

    <TextView
            android:text="Has your person stopped having a seizure?"
            android:textSize="7pt"
            android:layout_width="331dp"
            android:layout_height="42dp" android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.513" app:layout_constraintHorizontal_bias="0.462"/>
    <TextView
            android:text="-> If yes, see if the person has difficulty breathing or walking after the seizure."
            android:textSize="6pt"
            android:layout_width="335dp"
            android:layout_height="36dp" android:id="@+id/textView1"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="244dp"/>
    <TextView
            android:text="-> If no, using the red emergency call button on the bottom-left corner"
            android:textSize="6pt"
            android:layout_width="338dp"
            android:layout_height="30dp" android:id="@+id/textView2"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            android:layout_marginBottom="192dp"/>
    <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button8"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.717" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"/>
    <ImageView
            android:layout_width="288dp"
            android:layout_height="291dp" app:srcCompat="@drawable/_12" android:id="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="232dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="584dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>